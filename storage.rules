rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite upload e acesso apenas para usu√°rios autenticados
    match /products/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    match /profiles/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regra geral para outros arquivos
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}